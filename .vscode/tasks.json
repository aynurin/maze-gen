{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "command": "./tasks/clean.sh",
      "type": "shell",
      "group": {
        "kind": "build",
      }
    },
    {
      "label": "build",
      "command": "./tasks/build.sh",
      "type": "shell",
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "rebuild",
      "command": ".",
      "type": "shell",
      "problemMatcher": "$msCompile",
      "dependsOn": [
        "clean",
        "build"
      ],
      "group": {
        "kind": "build",
      }
    },
    {
      "label": "coverage",
      "type": "shell",
      "command": "./tasks/coverage.sh",
      "problemMatcher": [],
      "dependsOn": [
        "build"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "./tasks/test.sh --where=\"Category!=Load AND Category!=Integration\"",
      "problemMatcher": [],
      "dependsOn": [
        "build"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "all-tests",
      "type": "shell",
      "command": "mono packages/NUnit.ConsoleRunner.3.17.0/tools/nunit3-console.exe build/Debug/tests/PlayersWorlds.Maps.Tests.dll --framework=mono-4.0 && ./coverage.sh",
      "problemMatcher": [],
      "dependsOn": [
        "build"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "integration",
      "type": "shell",
      "command": "./tasks/test.sh --where=\"Category=Integration\"",
      "problemMatcher": [],
      "dependsOn": [
        "build-trace"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "performance",
      "type": "shell",
      "command": "./tasks/perf.sh",
      "problemMatcher": [],
      "dependsOn": [
        "build"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "load-test",
      "type": "shell",
      "command": "./tasks/test.sh --where=\"Category=Load\"",
      "problemMatcher": [],
      "dependsOn": [
        "build"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "mono --debug build/Debug/mazegen/maze-gen.exe ascii",
      "problemMatcher": [],
      "dependsOn": [
        "build"
      ]
    },
    {
      "label": "debug",
      "type": "shell",
      "command": "mono --debug --debugger-agent=transport=dt_socket,server=y,address=127.0.0.1:55555 build/Debug/mazegen/maze-gen.exe generate",
      "problemMatcher": [],
      "dependsOn": [
        "build"
      ]
    }
  ]
}