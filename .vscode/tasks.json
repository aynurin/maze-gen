{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "msbuild",
            "type": "process",
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "rebuild",
            "command": "rm -rf build && msbuild",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "test",
            "type": "shell",
            "command": "msbuild && nunit3-console build/Debug/tests/tests.dll",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}